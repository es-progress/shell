#!/usr/bin/env bash
#################################################
## echo wrapper                                ##
##                                             ##
## A wrapper for `echo`.                       ##
## Useful if you need to send a string to some ##
## application, but it can receive that        ##
## only from a script.                         ##
##                                             ##
## Example:                                    ##
##                                             ##
## export ECHO_WRAP=password                   ##
## export SSH_ASKPASS=/path/to/wrecho          ##
## ssh-add SSH_KEY </dev/null                  ##
#################################################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Echo special env variable
echo "${ECHO_WRAP:-}"

exit 0
