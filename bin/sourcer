# shellcheck shell=bash
##############################
## ESubuntu                 ##
##                          ##
## Sourcer                  ##
##                          ##
## Includes other libraries ##
##############################

# Get sourcer script dir
base_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
lib_dir="${base_dir}/../lib"

# Import lib files
while read -r file; do
    source "${lib_dir}/${file}"
done < <(ls -1 "${lib_dir}")
